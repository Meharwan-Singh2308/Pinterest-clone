<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1 class="text-xl">Create a Post</h1>
  <hr class="opacity-10 mt-4" />
  <form enctype="multipart/form-data" action="/createpost" method="post">
    <input class="block px-3 py-2 w-1/3" type="file" name="postimage" />
    <input
    name="title"
      class="block text-black px-3 py-2 border-2 mt-2 w-1/3 rounded-md"
      type="text"
      placeholder="title"
    />
    <textarea
    name="description"
      class="block text-black h-52 px-3 py-2 border-2 mt-2 w-1/3 rounded-md"
      type="text"
      placeholder="Description"
    ></textarea>
    <input
      class="block px-3 py-2 border-2 mt-2 bg-red-500 font-semibold w-1/3 rounded-md"
      value="Create Post"
      type="submit"
    />
  </form>
</div>

